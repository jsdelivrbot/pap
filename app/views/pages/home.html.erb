<div class="jumbotron">
  <div class="banner">
    <div class="banner-content">
      <h1>Live in a dream</h1>
      <p>The perfect home. The perfect place. For cheap.</p>
      <%= link_to 'Find now', flats_path, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
</div>
<div class="wrapper bottom-padded">
  <div class="container">
    <div class="flats">
      <h2>Recently added places</h2>
      <div class="row">
        <% @flats.each do |flat| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="flat-card">
              <%= link_to flat_path(flat) do %>
                <div class="card-header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url(<%= photo_path_for(flat) %>)">
                </div>
                <div class="card-body">
                  <h3><%= flat.title %></h3>
                  <p><%= flat.price %> â‚¬</p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
