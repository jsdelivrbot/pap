

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-registration">
        <div class="form-title">
          Change your password
        </div>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-inputs">
          <%= f.input :password, label: "New password", required: true,label: false, input_html: {:class => "input-form-session", placeholder:("password - #{@minimum_password_length} characters minimum" if @minimum_password_length) } %>
          <%= f.input :password_confirmation, label: "Confirm your new password", label: false, input_html: { :class => "input-form-session", placeholder:"password confirmation" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Change my password", :class=>"navbar-wagon-item navbar-wagon-button btn" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


