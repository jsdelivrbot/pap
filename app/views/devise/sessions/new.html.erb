<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-registration">
          <div class="form-title">Sign-In </div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, label: false, input_html: { :class => "input-form-session", placeholder:"email" } %>
            <%= f.input :password, required: false, label: false, input_html: { :class => "input-form-session", placeholder:"password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", :class=>"navbar-wagon-item navbar-wagon-button btn" %>
            <%= forgot_password %>
          </div> <br>
          <div> <%= btn_facebook %></div>
          <% end %>
        </div>
    </div>
  </div>
</div>

