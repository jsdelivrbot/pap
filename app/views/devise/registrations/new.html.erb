


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-registration">
      <div class="form-title">Sign-Up </div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :first_name, required: false, label: false, input_html: { :class => "input-form-session", placeholder:"first name" } %>
            <%= f.input :last_name, required: false, label: false, input_html: { :class => "input-form-session", placeholder:"last name" } %>
            <%= f.input :email, required: true, autofocus: true, label: false, input_html: { :class => "input-form-session", placeholder:"email" } %>
            <%= f.input :password, required: true,label: false, input_html: {:class => "input-form-session", placeholder:("password - #{@minimum_password_length} characters minimum" if @minimum_password_length) } %>
            <%= f.input :password_confirmation, required: true, label: false, input_html: { :class => "input-form-session", placeholder:"password confirmation" } %>
          </div> <br>
          <div class="form-actions">
            <%= f.button :submit, "Sign up", :class=>"navbar-wagon-item navbar-wagon-button btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

