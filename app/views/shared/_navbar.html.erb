<div class="navbar-wagon">
  <!-- Logo -->
  <div class="logo">
    <div class="main-logo">
      <%= link_to 'PAP', root_path %>
    </div>
    <div class="tagline hidden-xs">
      De propriétaire <br> à particulier
    </div>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Notification link-->
    <% if user_signed_in? %>
      <a href="" class="navbar-wagon-item navbar-wagon-link">
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      </a>

    <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= avatar_tag({class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown"}) %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to 'Profile', profile_path %></li>
            <li><%= link_to 'Sign-out', destroy_user_session_path, method: :delete %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="sign-in">
        <%= link_to 'SIGN-IN', new_user_session_path %>
      </div>
    <% end %>

    <!-- Button (call-to-action) -->
    <%= link_to 'Sell your home', new_flat_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg" id="mobile_logo">
    <!-- Search -->
    <div class="dropdown">
      <i class="fa fa-search dropdown-toggle mobile" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= render 'filter_sidebar_mobile' %>
      </ul>
    </div>
    <!-- Sign in -->
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle mobile" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>

</div>




